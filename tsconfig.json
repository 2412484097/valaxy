{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["DOM", "ESNext"],
    "strict": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "vite/client",
      "vue/ref-macros",
      "vite-plugin-pages/client",
      "vite-plugin-vue-layouts/client"
    ],
    "paths": {
      "@/*": ["demo/yun/*"],
      "~/*": ["packages/valaxy/src/client/*"],
      "@valaxyjs/client/*": ["packages/valaxy/src/client/*"],
      "valaxy/package.json": ["packages/valaxy/package.json"],
      "valaxy": ["packages/valaxy/src/index.ts"],
      "valaxy-theme-yun/*": ["packages/valaxy-theme-yun/*"],
      "valaxy-theme-yun": ["packages/valaxy-theme-yun/index.ts"]
    }
  },
  "exclude": ["dist", "node_modules", "cypress"]
}
